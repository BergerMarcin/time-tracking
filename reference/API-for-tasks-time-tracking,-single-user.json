              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                },
                "examples": {
                  "Example with finished and current tasks": {
                    "value": {
                      "id": "e4761b20-acfb-43b9-8623-096ade7d3552",
