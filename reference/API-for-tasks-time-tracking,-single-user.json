            "description": "Current task",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                },
                "examples": {
                  "Example of current task ": {
                    "value": {
                      "id": "157c22ff-2328-4209-9515-f4093476f792",
                      "name": "My new task from my new company",
                      "start": "2021-06-26 07:47:24.691279+02",
